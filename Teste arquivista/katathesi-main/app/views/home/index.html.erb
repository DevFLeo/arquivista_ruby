<div class="min-h-screen bg-slate-50 flex">
  <aside class="w-64 bg-[#1a1a1a] text-slate-300 flex flex-col hidden md:flex border-r border-[#b8860b]/20">
    <div class="p-6 text-white font-bold text-2xl tracking-tight border-b border-slate-800">
      Gestão Financeira Inteligente <span class="text-xs block text-[#b8860b] font-normal uppercase italic">Katáthesi</span>
    </div>
    <nav class="flex-1 p-4 space-y-2">
      <a href="#" class="flex items-center gap-3 p-3 rounded-lg hover:bg-slate-800 transition"> Configurações </a>
      <a href="#" class="flex items-center gap-3 p-3 rounded-lg hover:bg-slate-800 transition"> Métricas Financeiras </a>
      <a href="#" class="flex items-center gap-3 p-3 rounded-lg bg-slate-800 text-white border-r-4 border-[#b8860b]"> Dashboard </a>
    </nav>
  </aside>
  <main class="flex-1 p-8 overflow-y-auto">
    <header class="flex justify-between items-center mb-8">
      <h1 class="text-2xl font-semibold text-slate-800"> Dashboard </h1>
      <div class="text-sm bg-white border px-4 py-2 rounded shadow-sm text-slate-500">
        Último mês com dados: <span class="font-bold text-slate-800">Total</span>
      </div>
    </header>
    <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-8">
      <div class="bg-white p-6 rounded-lg shadow-sm border-l-4 border-slate-900">
        <p class="text-xs text-slate-500 uppercase font-bold text-center">Total Receita</p>
        <h2 class="text-3xl font-black text-slate-800 text-center my-4">R$ 55 235,00</h2>
        <p class="text-[10px] text-slate-400 text-center italic">vs mês anterior</p>
      </div>
      <div class="bg-white p-6 rounded-lg shadow-sm border-l-4 border-slate-700">
        <p class="text-xs text-slate-500 uppercase font-bold text-center">Total Despesas</p>
        <h2 class="text-3xl font-black text-slate-800 text-center my-4">39 067,00</h2>
        <p class="text-[10px] text-slate-400 text-center italic">vs mês anterior</p>
      </div>
      <div class="bg-white p-6 rounded-lg shadow-sm border-l-4 border-slate-500">
        <p class="text-xs text-slate-500 uppercase font-bold text-center">Lucro Líquido</p>
        <h2 class="text-3xl font-black text-slate-800 text-center my-4">6 715,00</h2>
        <p class="text-[10px] text-slate-400 text-center italic">vs mês anterior</p>
      </div>
      <div class="bg-white p-6 rounded-lg shadow-sm border-l-4 border-[#b8860b] bg-gradient-to-br from-white to-[#b8860b]/5">
        <p class="text-xs text-[#b8860b] uppercase font-bold text-center">Saldo no final do mês</p>
        <h2 class="text-3xl font-black text-slate-900 text-center my-4">R$ 7 684,00</h2>
        <p class="text-[10px] text-slate-400 text-center italic">Saldo Consolidado</p>
      </div>
    </div>
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6 mb-6">
      <div class="lg:col-span-2 bg-white p-6 rounded-lg shadow-sm">
        <h3 class="text-center font-bold text-slate-700 mb-4"> Fluxo Katáthesi (Receitas vs Despesas)</h3>
        <canvas id="mainChart" height="150"></canvas>
      </div>
      <div class="bg-white p-6 rounded-lg shadow-sm flex flex-col items-center justify-center">
        <p class="text-[10px] text-slate-500 uppercase font-bold mb-4">% Margem Lucro Líquido</p>
        <div class="relative w-40 h-40 flex items-center justify-center rounded-full border-[12px] border-[#b8860b] border-t-slate-100">
          <div class="text-center">
            <span class="text-3xl font-black text-slate-800">12,2%</span>
            <p class="text-[10px] text-slate-400">Objetivo: 12,0%</p>
          </div>
        </div>
      </div>
    </div>
    <div class="bg-white p-6 rounded-lg shadow-sm">
      <h3 class="text-center font-bold text-slate-700 mb-4">Tendência de Saldo Acumulado</h3>
      <canvas id="lineChart" height="100"></canvas>
    </div>
  </main>
</div>
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
  document.addEventListener('turbo:load', function() {
    const labels = <%= raw @meses.to_json %>;
    const receitas = <%= raw @receitas_mensais.to_json %>;
    const despesas = <%= raw @despesas_mensais.to_json %>.map(d => -d);
    const saldos = <%= raw @saldos_mensais.to_json %>;

    // Torres em tons de Cinza/Preto para destacar o Saldo Dourado
    const ctxBar = document.getElementById('mainChart').getContext('2d');
    new Chart(ctxBar, {
      type: 'bar',
      data: {
        labels: labels,
        datasets: [
                  {
                    label: 'Receita',
                    data: receitas,
                    backgroundColor: '#064e3b', // Verde Escuro Sofisticado
                    borderRadius: 4
                  },
                  {
                    label: 'Despesa',
                    data: despesas,
                    backgroundColor: '#7f1d1d', // Vermelho Escuro Sóbrio
                    borderRadius: 4
                  }
                ]
      },
      options: { responsive: true }
    });

    // Linha Dourada Majestosa
    const ctxLine = document.getElementById('lineChart').getContext('2d');
    new Chart(ctxLine, {
      type: 'line',
      data: {
        labels: labels,
        datasets: [{
          label: 'Saldo Katáthesi',
          data: saldos,
          borderColor: '#b8860b',
          backgroundColor: 'rgba(184, 134, 11, 0.1)',
          fill: true,
          tension: 0.4,
          borderWidth: 3,
          pointRadius: 4,
          pointBackgroundColor: '#fff'
        }]
      },
      options: {
        responsive: true,
        plugins: { legend: { display: false } }
      }
    });
  });
</script>